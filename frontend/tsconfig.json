{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": false,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "cesium-viewer": ["./bundledDeps/cesium-viewer/src"],
      "cesium-viewer/*": ["./bundledDeps/cesium-viewer/src/*"]
    }
  },
  "include": ["src", "bundledDeps/cesium-viewer/src"]
}
