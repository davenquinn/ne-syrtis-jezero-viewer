.text
  display block
  scroll-snap-type: y mandatory
  scroll-behavior: smooth

.location-link
  border-left 0.5em solid #eee
  margin-left -1em
  padding-left 0.5em
  min-height 1em
  margin-bottom 2em
  scroll-snap-align: center;
  //cursor: pointer
  //&:hover
  //  border-left-color var(--accent-background-light)
  &:global(.active)
    border-left-color var(--accent-background)

:global
  #refs
    font-size 0.8em
    p
      text-indent -1em
      margin-left 1em

  .side-note
    font-size 0.8em
    color #888
